        .news-date {
            font-size: 0.85em;
            color: #6c757d;
            margin-bottom: 8px;
        }

        .routine-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        .routine-table th, .routine-table td {
            border: 1px solid #e9ecef;
